  <script>
    function checkDate() {
      var inputDate = document.getElementById("date1").value;
      var today = new Date().toISOString().split('T')[0];
      var limitDate = today;
  
      if (inputDate < limitDate) {
        document.getElementById("date1").value = limitDate.replace(/-/g, ".");
      }
